<resources>

    <declare-styleable name="HoldingButtonLayout">
        <attr name="hbl_enabled" format="boolean"/>
        <attr name="hbl_radius" format="dimension"/>
        <attr name="hbl_icon" format="reference"/>
        <attr name="hbl_cancel_icon" format="reference"/>
        <attr name="hbl_offset_x" format="dimension"/>
        <attr name="hbl_offset_y" format="dimension"/>
        <attr name="hbl_holding_view" format="reference"/>
        <attr name="hbl_color" format="color"/>
        <attr name="hbl_cancel_color" format="color"/>
        <attr name="hbl_amplitude_radius" format="dimension"/>
        <attr name="hbl_second_alpha" format="float"/>
        <attr name="hbl_cancel_offset" format="float"/>
        <attr name="hbl_animate_holding_view" format="boolean"/>
        <attr name="hbl_direction" format="enum">
            <enum name="start" value="0"/>
            <enum name="end" value="1"/>
            <enum name="left" value="2"/>
            <enum name="right" value="3"/>
        </attr>
    </declare-styleable>

</resources>